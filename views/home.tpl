% rebase('layout.tpl', title='BSB Cultural - Home')

<div style="background-color: #f0f0f0; padding: 60px 0; text-align: center; margin-bottom: 30px;">
    <div class="container">
        <h1 style="font-size: 3rem; margin-bottom: 10px;">Brasília: Seu Guia de Descobertas</h1>
        <p style="font-size: 1.2rem; color: #666;">Descubra museus, eventos e a cultura da capital.</p>
    </div>
</div>

<div class="container">
    <h2>Em Alta Agora</h2>
    <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(250px, 1fr)); gap: 20px; margin-top: 20px;">
        
        <div class="card">
            <div class="card-img" style="height: 150px; background-color: #ddd;"></div>
            <div class="card-body">
                <h4>Museu Nacional</h4>
                <p class="text-muted">Museu • Esplanada</p>
                <a href="/locais" class="btn btn-primary" style="width: 100%">Ver Detalhes</a>
            </div>
        </div>

        <div class="card">
            <div class="card-img" style="height: 150px; background-color: #ddd;"></div>
            <div class="card-body">
                <h4>Cine Brasília</h4>
                <p class="text-muted">Cinema • Asa Sul</p>
                <a href="/locais" class="btn btn-primary" style="width: 100%">Ver Detalhes</a>
            </div>
        </div>

    </div>
</div>